@model CoreBankingApplication.Data.AccIndexer

@{
    ViewBag.Title = "CreateSubCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["Error"] != null)
{
    <span class="label label-danger" style="font-size:large"> @TempData["Error"]</span>
}

<h2>Create GL Category</h2>

@using (Html.BeginForm("CreateCategoryGL", "Accounts"))
{
    @Html.ValidationSummary(true, "Pls ensure you fill in correct details.")
    <div class="form-group">
        @Html.LabelFor(m => m.SubCategory.categoryName)
        @Html.TextBoxFor(m => m.SubCategory.categoryName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.SubCategory.categoryName)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.SubCategory.glCategoryId)
        @Html.DropDownListFor(m => m.SubCategory.glCategoryId, new SelectList(Model.type, "id", "type"), "Select GL Account Category", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.SubCategory.glCategoryId)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.SubCategory.accountDescription)
        @Html.TextAreaFor(m => m.SubCategory.accountDescription, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.SubCategory.accountDescription)
    </div>
    @Html.HiddenFor(m => m.SubCategory.id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">SAVE</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryval")
}