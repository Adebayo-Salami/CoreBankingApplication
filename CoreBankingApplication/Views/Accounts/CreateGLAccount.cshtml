@model CoreBankingApplication.Data.AccIndexer

@{
    ViewBag.Title = "CreateGLAccount";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["Error"] != null)
{
    <span class="label label-danger" style="font-size:large"> @TempData["Error"]</span>
}

<h2>Create GL Account</h2>

@using (Html.BeginForm("CreateGL", "Accounts"))
{
    @Html.ValidationSummary(true, "Pls ensure you fill in correct details.")
    <div class="form-group">
        @Html.LabelFor(m => m.AccountIndex.accountName)
        @Html.TextBoxFor(m => m.AccountIndex.accountName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.AccountIndex.accountName)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.AccountIndex.SubCategoryid)
        @Html.DropDownListFor(m => m.AccountIndex.SubCategoryid, new SelectList(Model.SubCategoryT, "id", "categoryName"), "Select GL Category", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.AccountIndex.SubCategoryid)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.AccountIndex.accountBranch)
        @Html.DropDownListFor(m => m.AccountIndex.accountBranch, new SelectList(Model.branc, "branchName", "branchName"), "Select Account Branch", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.AccountIndex.accountBranch)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.AccountIndex.accountDescription)
        @Html.TextAreaFor(m => m.AccountIndex.accountDescription, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.AccountIndex.accountDescription)
    </div>
    @Html.HiddenFor(m => m.AccountIndex.id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">SAVE</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryval")
}


