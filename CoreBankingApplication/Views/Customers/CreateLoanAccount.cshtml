@model CoreBankingApplication.Data.AccIndexer

@{
    ViewBag.Title = "assignAccount";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (TempData["Error"] != null)
{
    <span class="label label-danger" style="font-size:large"> @TempData["Error"]</span>
}
<h2>Assign New Account to Customer Profile</h2>

@using (Html.BeginForm("CreateAccount", "Customers"))
{
    @Html.ValidationSummary(true, "Pls ensure you fill in correct details.")

    @Html.HiddenFor(m => m.CustomerAccounts.CustomerID)

    @Html.HiddenFor(m => m.CustomerAccounts.customerAccountType)

    @Html.HiddenFor(m => m.CustomerAccounts.accountBalance)

    @Html.HiddenFor(m => m.CustomerAccounts.branchCreated)

    @Html.HiddenFor(m => m.CustomerAccounts.interestRate)

    @Html.HiddenFor(m => m.CustomerAccounts.lien)

    <p>(Pls Fill In The Details Below)</p>

    <div class="form-group">
        @Html.LabelFor(m => m.CustomerAccounts.linkAcctType)
        @Html.DropDownListFor(m => m.CustomerAccounts.linkAcctType, new SelectList(Model.selectAccountT, "accountName", "accountName"), "Select an Account Type", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.CustomerAccounts.linkAcctType)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.CustomerAccounts.linkedAcctNumber)
        @Html.TextBoxFor(m => m.CustomerAccounts.linkedAcctNumber, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.CustomerAccounts.linkedAcctNumber)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.CustomerAccounts.months)
        @Html.TextBoxFor(m => m.CustomerAccounts.months, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.CustomerAccounts.months)
    </div>

    @Html.HiddenFor(m => m.CustomerAccounts.id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">SAVE</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryval")
}

